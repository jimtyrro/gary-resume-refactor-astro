---
import "@fontsource/outfit/300.css";
import "@fontsource/outfit/400.css";
import "@fontsource/outfit/700.css";
import IconList from "../components/IconList.astro";
import JobListings from "../components/JobListings.astro";
import "../styles/main.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Gary Resume Refactor @ Astro</title>
  </head>
  <body>
    <div class="main-grid">
      <main>
        <p class="eyebrow">Skills & Experience</p>
        <h1 class="page-title">My Resume</h1>
        <p class="intro">As an individual with exquisite taste in the finest companies, I've helped represent both client and employer to the highest degree.</p>
        <JobListings />
      </main>

      <aside>
        <h2 class="visually-hidden">My skills</h2>
        <IconList />
      </aside>
    </div>
  </body>
</html>
